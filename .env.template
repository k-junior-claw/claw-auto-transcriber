# Claw Auto-Transcriber - Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Path to the Google Cloud service account credentials JSON file
# This file should NEVER be committed to version control
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# Server hostname (default: localhost)
MCP_SERVER_HOST=localhost

# Server port (default: 8765)
MCP_SERVER_PORT=8765

# Server name for identification
MCP_SERVER_NAME=claw-auto-transcriber

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Maximum audio duration in seconds (default: 60)
MAX_AUDIO_DURATION=60

# Temporary directory for audio processing (default: /tmp/claw_transcriber)
TEMP_AUDIO_DIR=/tmp/claw_transcriber

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log format: json or text (default: json)
LOG_FORMAT=json

# =============================================================================
# AUDIO PROCESSING SETTINGS
# =============================================================================

# Maximum audio file size in bytes (default: 10MB)
MAX_AUDIO_SIZE=10485760

# Supported audio formats (comma-separated)
SUPPORTED_AUDIO_FORMATS=ogg,mp3,wav,flac

# Default language for transcription (BCP-47 format)
DEFAULT_LANGUAGE_CODE=en-US

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable authentication for MCP connections (default: false)
REQUIRE_AUTHENTICATION=false

# Rate limit per minute per client (default: 60)
RATE_LIMIT_PER_MINUTE=60

# Maximum concurrent tool invocations (default: 10)
MAX_CONCURRENT_INVOCATIONS=10

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Timeout for transcription in seconds (default: 30)
TRANSCRIPTION_TIMEOUT=30

# Maximum retry attempts for failed transcriptions (default: 3)
MAX_RETRY_ATTEMPTS=3

# Retry delay in seconds (default: 1)
RETRY_DELAY=1
